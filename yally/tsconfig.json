{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es2015",
    "jsx": "react",
    "baseUrl": "src",
    "typeRoots": ["/node_modules/@types", "@types"],
    "types": ["node"]
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts"],
  "exclude": ["./node_modules", "./**/*.spec.ts"]
}
